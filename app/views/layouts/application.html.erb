<!DOCTYPE html>
<html>
  <head>
    <title><%= f_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    
  </head>
  <body class="main-container">
  <header class="navbar">
  <div class="container">
  <div class="logo">
    <%= link_to "SHARE PLACE", posts_path, id: "logo" %>
  </div>
    <nav>
      <ul class=" homenav navbar-nav">
        <% if logged_in? %>
        <li><%= link_to "投稿", root_path %></li>
          <li><%= link_to "ユーザー", users_path %></li>
              <li><%= link_to "アカウント", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
          <li><%= link_to "新規登録", signup_path %></li>
          <li><%= link_to "概要", about_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
    <div class="container">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
      <%= yield %>
    </div>
  </body>
</html>